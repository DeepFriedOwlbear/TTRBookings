@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


@if (User.Identity.IsAuthenticated)
{
    <h4>Welcome back, <b>@User.Identity.Name!</b></h4>
    <br />
    <table class="table table-sm">

        <thead class="thead-dark">
            <tr>
                <th class="w-auto">Claim Type</th>
                <th class="w-auto">Claim</th>
            </tr>
        </thead>

        @foreach (var claim in User.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </table>
}
else
{
    <h4>Please log in to continue.</h4>
}