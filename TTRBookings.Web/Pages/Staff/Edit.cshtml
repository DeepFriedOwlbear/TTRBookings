@page
@model TTRBookings.Web.Pages.Staff.EditModel

<h2>Details</h2>
<br />

<div class="row">
    <div class="col">
        <form asp-page="./Edit" method="post">
            <fieldset id="FormFieldset" class="p-3 mb-2 bg-secondary text-white" disabled>
                <input asp-for="StaffVM.Id" type="hidden" />
                <div class="form-row">
                    <div class="col">
                        <label asp-for="StaffVM.Name">Name</label>
                    </div>
                </div>
                <div class="form-row w-25">
                    <div class="col">
                        <input class="form-control" asp-for="StaffVM.Name" />
                    </div>
                </div>
            </fieldset>

            <div class="form-row">
                <div class="col-auto align-content-center">
                    <button type="button" id="unlockFormButton" class="btn btn-secondary">Edit</button>
                </div>
                <div class="col-auto align-content-center">
                    <button type="submit" id="submitButton" class="btn btn-success" hidden>Save Changes</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col">
        <label>Total Bookings: @Model.Bookings.Count</label><br />
        <label>Total Revenue: @Model.StaffVM.TotalRevenue</label>
    </div>
</div>
<br />

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th class="w-auto">Room</th>
            <th class="w-auto">Staff</th>
            <th class="w-auto">Tier</th>
            <th class="w-auto">Start</th>
            <th class="w-auto">End</th>
            <th class="w-25 text-center">Options</th>
        </tr>
    </thead>
    @foreach (var booking in Model.Bookings)
    {
        <tr>
            <td class="w-auto">@booking.Room.Name</td>
            <td class="w-auto">@booking.Staff.Name</td>
            <td class="w-auto">@booking.Tier.Rate</td>
            <td class="w-auto">@booking.TimeSlot.Start.ToString("g")</td>
            <td class="w-auto">@booking.TimeSlot.End.ToString("g")</td>
            <td class="w-25 text-center">
                <a asp-page="../Bookings/Edit" asp-route-id="@booking.Id" class="btn btn-primary btn-sm">Details</a>
            </td>
        </tr>
    }
</table>

@section Scripts
{
    <script type="text/javascript">

        let el = document.getElementById("unlockFormButton");
        el.addEventListener("click", UnlockFieldset);

        let originalName = document.getElementById("StaffVM_Name").value;

        function UnlockFieldset() {
            let unlockButton = document.getElementById("unlockFormButton")
            let fieldset = document.getElementById("FormFieldset");

            if (fieldset.disabled == true) {
                fieldset.disabled = false;
                fieldset.className = "p-3 mb-2";
                unlockButton.textContent = "Cancel";
                unlockButton.className = "btn btn-danger";
                document.getElementById("submitButton").hidden = false;
            }
            else {
                fieldset.disabled = true;
                fieldset.className = "p-3 mb-2 bg-secondary text-white";
                unlockButton.textContent = "Edit";
                unlockButton.className = "btn btn-secondary";
                document.getElementById("submitButton").hidden = true;

                document.getElementById("StaffVM_Name").value = originalName;
            }
        }
    </script>
}